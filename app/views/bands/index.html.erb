<div class="container">
	<p id="notice"><%= notice %></p>
	<div class="container" class="btn btn-secondary">
	  <div class="row">
	    <div class="coi-lg-10 ">
			<h1>Bands</h1>
			<%= link_to 'newband', new_band_path,  {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#new-bandModal', class: 'btn btn-primary btn-lg'}  %>
			<div class="bands-block"  class="btn btn-success">   
				<table id="bands" class="table table-striped table-bordered table-hover" class="btn btn-secondary">  
				    <tr>
				      <th class="col-md-2" class="btn btn-secondary">Name</th>
				      <th colspan="2"></th>
				    </tr>
				  </thead>
				  <tbody>		

				  	<%= render partial: 'band', collection: @bands %><br>
				  </tbody>
				</table>
			</div>
				<br>
			
			<div class="modal fade" id="new-bandModal" tabindex="-1" role="dialog" aria-labelledby="new-bandModalLabel" aria-hidden="true">
			  <div class="modal-dialog" role="document">
			    <div class="modal-content">
			      <div class="modal-header">
			        <h5 class="modal-title" id="new-bandModalLabel">new-band</h5>
			        <button type="button" class="close" data-dismiss="modal" aria-label="Close">        
			        </button>
			      </div>
			      <div id="new-band">
			      </div>
			    </div>
			        
			  </div>
			</div>
			</div>
			<div class="modal fade" id="edit-bandModal" tabindex="-1" role="dialog" aria-labelledby="edit-bandModalLabel" aria-hidden="true">
			  <div class="modal-dialog" role="document">
			    <div class="modal-content">
			      <div class="modal-header">
			        <h5 class="modal-title" id="edit-bandModalLabel">edit-band</h5>
			        <button type="button" class="close" data-dismiss="modal" aria-label="Close">        
			        </button>
			      </div>
			      <div id="edit-band">
			      </div>
			    </div>
			        
			  </div>
			</div>
			</div>
			<div class="modal fade" id="show-bandModal" tabindex="-1" role="dialog" aria-labelledby="show-bandModalLabel" aria-hidden="true">
			  <div class="modal-dialog" role="document">
			    <div class="modal-content">
			      <div class="modal-header">
			        <h5 class="modal-title" id="show-bandModalLabel">Show-band</h5>
			        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close"></button>
			      </div>
			      <div id="show-band">
			      </div>
			    </div>
			         
			  </div>
			</div>
			</div>
		</div>
	</div>
</div>